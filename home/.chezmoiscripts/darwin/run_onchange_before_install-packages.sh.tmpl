#!/usr/bin/env bash

set -eufo pipefail

{{ $brews := list
       "awscli"
       "bash"
       "git" -}}
{{ $casks := list
       "slack" -}}

{{ if eq .chezmoi.arch "amd64" -}}
{{   $brews = concat $brews (list
       "shellcheck") -}}
{{   $casks = concat $casks (list
       "temurin") -}}
{{ end -}}

{{ if .work -}}
{{   $brews = concat $brews (list
       "openconnect") -}}
{{   $casks = concat $casks (list
       "openconnect-gui"
       "kap"
       "keepassxc") -}}
{{ end -}}

{{ if .personal -}}
{{   $brews = concat $brews (list
       "ffmpeg"
       "openconnect") -}}
{{   $casks = concat $casks (list
       "balenaetcher"
       "firefox"
       "google-chrome"
       "kap"
       "keepassxc"
       "mambaforge"
       "microsoft-office-businesspro"
       "openconnect-gui"
       "postman"
       "visual-studio-code"
       "whatsapp"
       "zoom") -}}
{{ end -}}

brew bundle --no-lock --file=/dev/stdin <<EOF
{{ range ($brews | sortAlpha | uniq) -}}
brew "{{ . }}"
{{ end -}}
{{ range ($casks | sortAlpha | uniq) -}}
cask "{{ . }}"
{{ end -}}
EOF